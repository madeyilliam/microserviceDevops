<?xml version="1.0" encoding="UTF-8"?>
<LiveChatSensitiveDataRule xmlns="http://soap.sforce.com/2006/04/metadata" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <actionType>Replace</actionType>
    <description>What: Block sensitive email information.</description>
    <enforceOn>7</enforceOn>
    <isEnabled>false</isEnabled>
    <pattern>\b([a-z0-9!#$%&amp;&apos;*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&amp;&apos;*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?)\b</pattern>
    <priority xsi:nil="true"/>
    <replacement>&lt;Email&gt;</replacement>
</LiveChatSensitiveDataRule>
